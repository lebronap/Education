<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="新用户注册"
        android:textColor="#336699"
        android:textSize="20sp" />


    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="15dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_username"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/username"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_username"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:hint="请输入用户名"
            android:maxLines="1"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_username"
        android:layout_marginTop="0dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/password"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_password"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:maxLines="1"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_password"
        android:layout_marginTop="0dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_password1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/password"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_password1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:inputType="textPassword"
            android:hint="请再次输入密码"
            android:maxLines="1"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_a1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_password1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_part"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/part"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <RadioGroup
            android:id="@+id/rg_a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="100dp"
                android:textSize="13sp"
                android:text="学生"/>
            <RadioButton
                android:id="@+id/rb_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="教师"/>
        </RadioGroup>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_a1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#077781"
        android:textColor="#fff"
        android:text="注册"/>


</RelativeLayout>